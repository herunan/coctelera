<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-12">
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
          <%= link_to cocktail_path(cocktail) do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, :height => 250, :crop => :fill if cocktail.photo.attached? %>)">
              <%= cocktail.name %>
            </div>
          <% end %>
        <% end %>
      </div>
      <br>
      <%= link_to "+ Add a cocktail", new_cocktail_path(@cocktail), class: "btn btn-primary" %>
  </div>
</div>
