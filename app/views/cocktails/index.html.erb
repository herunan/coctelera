<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 offset-md-3">
      <h1>Cocktails</h1>
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.image %>)">
            <%= cocktail.name %>
          </div>
        <% end %>
      <% end %>
      <p><%= link_to "+ Add a cocktail", new_cocktail_path%></p>
    </div>
  </div>
</div>
