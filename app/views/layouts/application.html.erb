<!DOCTYPE html>
<html>
  <head>
    <title>Coctelera</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag "application" %>    <!-- from app/javascript/packs/application.js -->
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-dark navbar-lewagon">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "coctelera-logo.svg", id: "coctelera-logo" %>
        Coctelera
      <% end %>
      <!-- Collapse button -->
      <button class="navbar-toggler hamburger" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <div class="animated-toggler"><span></span><span></span><span></span></div>
      </button>
      <!-- Collapsible content -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!-- Links -->
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Cocktails", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Ingredients", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
            </div>
          </li>
        </ul>
        <form class="form-inline my-lg-0">
          <input id="navbar-search" class="form-control mr-sm-2" type="search" placeholder="&#xf002;" aria-label="Search" name="query">
        </form>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
